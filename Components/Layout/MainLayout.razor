@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject ICartService CartService
@inject ICustomerAuthService AuthService
@implements IDisposable

<ToastContainer />

<div class="shop-layout">
    <!-- Header -->
    <header class="shop-header">
        <div class="header-container">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="logo-icon">◆</span>
                <span class="logo-text">Stuffsus</span>
            </a>

            <!-- Navigation -->
            <nav class="main-nav">
                <a href="/" class="nav-link @(IsActive("/") ? "active" : "")">Trang chủ</a>
                <a href="/shop" class="nav-link @(IsActive("/shop") ? "active" : "")">Cửa hàng</a>
                <a href="/orders" class="nav-link @(IsActive("/orders") ? "active" : "")">Đơn hàng</a>
            </nav>

            <!-- Right Actions -->
            <div class="header-actions">
                <HeaderSearch />
                
                <CartIcon />

                <HeaderAuth />
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="shop-main">
        @Body
    </main>

    <!-- Footer -->
    <footer class="shop-footer">
        <!-- Brand Showcase Section -->
        <div class="footer-brand">
            <div class="footer-container">
                <div class="brand-content">
                    <div class="brand-main">
                        <div class="brand-logo">
                            <span class="logo-diamond">◆</span>
                            <span class="logo-name">Stuffsus</span>
                        </div>
                        <p class="brand-tagline">Chất lượng là nền tảng · Phong cách là bản sắc</p>
                    </div>
                    
                    <div class="brand-promises">
                        <div class="promise-item">
                            <div class="promise-icon">✦</div>
                            <div class="promise-text">
                                <span class="promise-title">Cam kết chất lượng</span>
                                <span class="promise-desc">Sản phẩm chính hãng 100%</span>
                            </div>
                        </div>
                        <div class="promise-item">
                            <div class="promise-icon">◇</div>
                            <div class="promise-text">
                                <span class="promise-title">Giao hàng nhanh</span>
                                <span class="promise-desc">Trong vòng 24-48 giờ</span>
                            </div>
                        </div>
                        <div class="promise-item">
                            <div class="promise-icon">○</div>
                            <div class="promise-text">
                                <span class="promise-title">Đổi trả miễn phí</span>
                                <span class="promise-desc">Trong 30 ngày đầu tiên</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Links Section -->
        <div class="footer-links-section">
            <div class="footer-container">
                <div class="footer-bottom">
                    <p>&copy; 2025 Stuffsus. Bảo lưu mọi quyền.</p>
                </div>
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Đã xảy ra lỗi không mong muốn.
    <a href="." class="reload">Tải lại</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _isInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_isInitialized)
        {
            _isInitialized = true;
            // Tải dữ liệu từ LocalStorage sau khi render
            await Task.WhenAll(
                CartService.LoadCartFromStorageAsync(),
                AuthService.LoadAuthStateFromStorageAsync()
            );
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        // Cleanup nếu cần
    }

    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path) || 
               (path == "/" && Navigation.Uri.EndsWith(Navigation.BaseUri.TrimEnd('/')));
    }
}
