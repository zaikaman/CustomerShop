@inherits LayoutComponentBase
@implements IDisposable
@inject ICartService CartService
@inject NavigationManager Navigation

<div class="shop-layout">
    <!-- Header -->
    <header class="shop-header">
        <div class="header-container">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="logo-icon">◆</span>
                <span class="logo-text">Stuffsus</span>
            </a>

            <!-- Navigation -->
            <nav class="main-nav">
                <a href="/" class="nav-link @(IsActive("/") ? "active" : "")">Trang chủ</a>
                <a href="/shop" class="nav-link @(IsActive("/shop") ? "active" : "")">Cửa hàng</a>
                <a href="/orders" class="nav-link @(IsActive("/orders") ? "active" : "")">Đơn hàng</a>
            </nav>

            <!-- Right Actions -->
            <div class="header-actions">
                <button class="action-btn search-btn" @onclick="ToggleSearch">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.3-4.3"></path>
                    </svg>
                </button>
                
                <a href="/cart" class="action-btn cart-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="8" cy="21" r="1"></circle>
                        <circle cx="19" cy="21" r="1"></circle>
                        <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path>
                    </svg>
                    @if (cartItemCount > 0)
                    {
                        <span class="cart-badge">@cartItemCount</span>
                    }
                </a>

                <HeaderAuth />
            </div>
        </div>

        <!-- Search Overlay -->
        @if (showSearch)
        {
            <div class="search-overlay" @onclick="ToggleSearch">
                <div class="search-container" @onclick:stopPropagation>
                    <input type="text" placeholder="Tìm kiếm sản phẩm..." 
                           @bind="searchQuery" 
                           @bind:event="oninput"
                           @onkeydown="HandleSearchKeyDown"
                           class="search-input" />
                    <button class="search-submit" @onclick="PerformSearch">
                        Tìm kiếm
                    </button>
                </div>
            </div>
        }
    </header>

    <!-- Main Content -->
    <main class="shop-main">
        @Body
    </main>

    <!-- Footer -->
    <footer class="shop-footer">
        <!-- Newsletter Section -->
        <div class="footer-newsletter">
            <div class="footer-container">
                <div class="newsletter-content">
                    <div class="newsletter-text">
                        <h3>Sẵn sàng nhận<br/>thông tin mới nhất?</h3>
                        <p class="subtitle">Stuffsus - Mang đến sản phẩm chất lượng</p>
                        <p class="description">Chúng tôi lắng nghe nhu cầu của bạn, xác định cách tiếp cận tốt nhất và tạo ra giải pháp phù hợp dành riêng cho bạn.</p>
                    </div>
                    <div class="newsletter-form-wrapper">
                        <div class="newsletter-form">
                            <input type="email" placeholder="Email của bạn" />
                            <button>Gửi</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Links Section -->
        <div class="footer-links-section">
            <div class="footer-container">
                <div class="footer-bottom">
                    <p>&copy; 2025 Stuffsus. Bảo lưu mọi quyền.</p>
                </div>
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Đã xảy ra lỗi không mong muốn.
    <a href="." class="reload">Tải lại</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private int cartItemCount = 0;
    private bool showSearch = false;
    private string searchQuery = "";

    protected override void OnInitialized()
    {
        cartItemCount = CartService.GetCartItemCount();
        CartService.OnChange += UpdateCartCount;
    }

    private void UpdateCartCount()
    {
        cartItemCount = CartService.GetCartItemCount();
        InvokeAsync(StateHasChanged);
    }

    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path) || 
               (path == "/" && Navigation.Uri.EndsWith(Navigation.BaseUri.TrimEnd('/')));
    }

    private void ToggleSearch()
    {
        showSearch = !showSearch;
    }

    private void HandleSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PerformSearch();
        }
    }

    private void PerformSearch()
    {
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            Navigation.NavigateTo($"/shop?search={Uri.EscapeDataString(searchQuery)}");
            showSearch = false;
            searchQuery = "";
        }
    }

    public void Dispose()
    {
        CartService.OnChange -= UpdateCartCount;
    }
}
