@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject ICartService CartService
@inject ICustomerAuthService AuthService
@implements IDisposable

<ToastContainer />

<div class="shop-layout">
    <!-- Header -->
    <header class="shop-header">
        <div class="header-container">
            <!-- Logo -->
            <a href="/" class="logo">
                <span class="logo-icon">◆</span>
                <span class="logo-text">Stuffsus</span>
            </a>

            <!-- Navigation -->
            <nav class="main-nav">
                <a href="/" class="nav-link @(IsActive("/") ? "active" : "")">Trang chủ</a>
                <a href="/shop" class="nav-link @(IsActive("/shop") ? "active" : "")">Cửa hàng</a>
                <a href="/orders" class="nav-link @(IsActive("/orders") ? "active" : "")">Đơn hàng</a>
            </nav>

            <!-- Right Actions -->
            <div class="header-actions">
                <HeaderSearch />
                
                <CartIcon />

                <HeaderAuth />
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="shop-main">
        @Body
    </main>

    <!-- Footer -->
    <footer class="shop-footer">
        <!-- Newsletter Section -->
        <div class="footer-newsletter">
            <div class="footer-container">
                <div class="newsletter-content">
                    <div class="newsletter-text">
                        <h3>Sẵn sàng nhận<br/>thông tin mới nhất?</h3>
                        <p class="subtitle">Stuffsus - Mang đến sản phẩm chất lượng</p>
                        <p class="description">Chúng tôi lắng nghe nhu cầu của bạn, xác định cách tiếp cận tốt nhất và tạo ra giải pháp phù hợp dành riêng cho bạn.</p>
                    </div>
                    <div class="newsletter-form-wrapper">
                        <div class="newsletter-form">
                            <input type="email" placeholder="Email của bạn" />
                            <button>Gửi</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Links Section -->
        <div class="footer-links-section">
            <div class="footer-container">
                <div class="footer-bottom">
                    <p>&copy; 2025 Stuffsus. Bảo lưu mọi quyền.</p>
                </div>
            </div>
        </div>
    </footer>
</div>

<div id="blazor-error-ui" data-nosnippet>
    Đã xảy ra lỗi không mong muốn.
    <a href="." class="reload">Tải lại</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool _isInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_isInitialized)
        {
            _isInitialized = true;
            // Tải dữ liệu từ LocalStorage sau khi render
            await CartService.LoadCartFromStorageAsync();
            await AuthService.LoadAuthStateFromStorageAsync();
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        // Cleanup nếu cần
    }

    private bool IsActive(string path)
    {
        return Navigation.Uri.EndsWith(path) || 
               (path == "/" && Navigation.Uri.EndsWith(Navigation.BaseUri.TrimEnd('/')));
    }
}
